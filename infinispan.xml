<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:infinispan:config:5.1 http://www.infinispan.org/schemas/infinispan-config-5.1.xsd" xmlns="urn:infinispan:config:5.1">
  <global>
     <transport>
        <properties>
           <property name="configurationFile" value="jgroups-udp.xml"/>
        </properties>
     </transport>
  </global>
  <default>
    <!-- Configure a synchronous replication cache -->
    <clustering mode="replication">
      <sync/>
    </clustering>
  </default>
  <namedCache name="translation">
    <eviction strategy="NONE" />
  </namedCache>
  <namedCache name="response">
    <eviction strategy="LIRS" maxEntries="20" />
  </namedCache>
  <namedCache name="file">
    <eviction strategy="LIRS" maxEntries="20" />
  </namedCache>
  <namedCache name="data">
    <eviction strategy="LIRS" maxEntries="20" />
  </namedCache>
</infinispan>